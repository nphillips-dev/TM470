@page
@model DoINeedCountryModel
@{
    ViewData["Title"] = "Select country";
}

<div class="container">
    <div class="row">
        <h1>Cross a beer off your list</h1>
    </div>
    <br />
    <div class="row">
        <h2>Select the country your beer comes from:</h2>
    </div>
    <br />

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="row">
        <div class="col">
            <form role="form" method="post">
                <div class="dropdown">
                    <select class="form-control" id="Country_Id" asp-for="Country.Id">
                        <option disabled value="blank" selected>Select a country</option>
                        @foreach (var country in Model.countries)
                        {
                            <option value=@country.Id>@country.Country</option>
                        }
                    </select>
                </div>

                <br><br>

                <button type="submit" class="btn btn-dark">Next</button>
                <p><a href="Dashboard">Cancel </a></p>
            </form>
        </div>
    </div>
</div>